
@model IEnumerable<NLT.Models.SpecimenModel>

@{
    ViewBag.Title = "Specimens";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Specimen", "Master", FormMethod.Post))
{

    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Specimens</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>

    <div class="row">
        <div class="col-lg-6">

            <table class="table table-responsive">
                <caption style="text-align:right;font-weight:bold;"><a href="/Master/Specimen">Create</a></caption>
                <tr style="background-color:#ffe9c6">
                    <td style="text-align:center">
                        Specimen Id
                    </td>
                    <td>
                        Specimen Name
                    </td>
                    <td></td>
                </tr>

                @foreach (var m in Model)
                {
                    <tr style="background-color:#f6fcfc">
                        <td style="text-align:center">
                            @m.SpecimenId
                        </td>
                        <td>
                            @m.SpecimenName
                        </td>
                        <td>
                            <a href="/Master/Specimen/@m.SpecimenId">Edit</a>
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>


}

