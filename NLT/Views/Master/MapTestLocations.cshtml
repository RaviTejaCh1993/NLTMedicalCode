
@model IEnumerable<NLT.Models.TestLocationModel>

@{
    ViewBag.Title = "MapTestLocations";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Pleases", "Master", FormMethod.Post))
{

    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Map Test Locations</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>

    <div class="row">
        <div class="col-lg-6">

            <table class="table table-responsive">
                <caption style="text-align:right;font-weight:bold;"><a href="/Master/MapTestLocation">Create</a></caption>
                <tr style="background-color:#ffe9c6">
                    <td style="text-align:center">
                        Map Id
                    </td>
                    <td>
                        Company Name
                    </td>
                    <td>
                        Location Name
                    </td>
                    <td>
                        Test Name
                    </td>
                    <td>
                        Price
                    </td>
                    <td>
                        Active Status
                    </td>
                    <td></td>
                </tr>

                @foreach (var m in Model)
                {
                    <tr style="background-color:#f6fcfc">
                        <td style="text-align:center">
                            @m.MapId
                        </td>
                        <td>
                            @m.CompanyName
                        </td>
                        <td>
                            @m.LocationName
                        </td>
                        <td>
                            @m.TestName
                        </td>
                        <td>
                            @m.price
                        </td>
                        <td>
                            @m.ActiveStatus
                        </td>
                        <td>
                            <a href="/Master/MapTestLocation/@m.MapId">Edit</a>
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>


}

