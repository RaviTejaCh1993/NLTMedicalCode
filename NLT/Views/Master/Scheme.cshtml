
@{
    ViewBag.Title = "Scheme";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Scripts/jquery-1.11.3.min.js"></script>

@model NLT.Models.SchemeModel

@using (Html.BeginForm("Scheme", "Master", FormMethod.Post))
{
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header" style="color:#ff6a00;font-weight:bold;">@ViewBag.PageHedding</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>

    <div class="row">
        <div class="col-lg-8">
            <table class="table table-responsive">
                <tr id="lblCityIdRow" style="display:none">
                    <td style="text-align:center">
                        Scheme Id
                    </td>
                    <td>
                        @Html.TextBoxFor(Model => Model.SchemeId, null, new { @readonly = "readonly" })

                    </td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                </tr>
                <tr>
                    <td style="text-align:center">
                        Scheme Name
                    </td>
                    <td>
                        @Html.TextBoxFor(Model => Model.SchemeName, null, new { Id = "SchemeName", @class = "form-control" })
                       
                    </td>
                    <td></td>
                    <td></td>
                    <td></td>
                    

                </tr>
                <tr>
                    <td style="text-align:center">
                        
                    </td>
                    <td>
                       
                        <div style="float:right;">
                            <div style="float:left;">
                                <input id="btnSaveScheme" type="submit" value="Submit" style="background-color:#2d9b39;color:white;" class="btn btn-success" />
                            </div>
                            <div style="float:left;padding-left:10px;">
                                <a href="/Master/Schemes" class="btn btn-warning">Cancel</a>
                            </div>
                        </div>
                    </td>
                    <td></td>
                    <td></td>
                    <td></td>
                    

                </tr>

                </table>
            </div>
        </div>


   }
