
@model NLT.Models.SpecimenModel

@{
    ViewBag.Title = "Specimen";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Scripts/jquery-1.11.3.min.js"></script>
@using (Html.BeginForm("Specimen", "Master", FormMethod.Post))
{

    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header" style="color:#ff6a00;font-weight:bold;">@ViewBag.PageHedding</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>

    <div class="row">
        <div class="col-lg-4">
            <table class="table table-responsive">
                <tr id="lblStateIdRow" style="display:none">
                    <td style="text-align:center">
                        Specimen Id
                    </td>
                    <td>

                        @Html.TextBoxFor(Model => Model.SpecimenId, "", new { @readonly = "readonly", @class = "form-control" })
                    </td>
                </tr>
                <tr>
                    <td style="text-align:center">
                        Specimen Name
                    </td>
                    <td>
                        @Html.TextBoxFor(Model => Model.SpecimenName, null, new { Id = "SpecimenName", @class = "form-control" })
                    </td>
                </tr>
                <tr>
                    <td style="text-align:center"></td>
                   
                    <td style="text-align:right">

                        <div style="float:left;">
                            <input type="submit" value="Submit" class="btn-success form-control" onclick="return valiadate()" />
                        </div>
                        <div style="float:left;padding-left:10px;">
                            <a href="/Master/Specimens" class="btn btn-warning">Cancel</a>
                        </div>
                    </td>
                </tr>
            </table>
        </div>
    </div>



    <script type="text/javascript">
        $(document).ready(function () {


            $(".btn-success").click(function () {

                var Errors = "";
                if ($("#SpecimenName").val() == "") {
                    Errors = Errors + "Please Enter Specimen Name \n";
                }

                if (Errors != "") {
                    alert(Errors);
                    return false
                }
                else
                    return true;

            });

        });

    </script>

}


