
@model NLT.Models.CityModel

@{
    ViewBag.Title = "City";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Scripts/jquery-1.11.3.min.js"></script>

<style>
    .Grid-Headder-bg-color {
        background-color: #3b74fa;
        color: white;
        font-weight: bold;
    }
</style>


@using (Html.BeginForm("city", "Master", FormMethod.Post))
{

    <div class="container">
        <br />
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <b> @ViewBag.PageHedding </b>
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-6">
                               
                                <table class="table table-responsive">
                                    <tr id="lblCityIdRow" style="display:none">
                                        <td style="text-align:center">
                                            City Id
                                        </td>
                                        <td>
                                            @Html.TextBoxFor(Model => Model.CityId, "", new { @readonly = "readonly" })

                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="text-align:center">
                                            City Name
                                        </td>
                                        <td>
                                            @Html.TextBoxFor(Model => Model.CityName, null, new { Id = "CityName", @class = "form-control" })
                                            @*@Html.ValidationMessageFor(Model => Model.CityName, "Please Enter CityName");*@
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="text-align:center">
                                            State
                                        </td>
                                        <td>
                                            @Html.DropDownListFor(m => m.StateId, Model.States, new { @style = "width:100%;", Id = "ddlState", @class = "form-control" })

                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="text-align:center">
                                            PinCode
                                        </td>
                                        <td>
                                            @Html.TextBoxFor(Model => Model.Pincode, null, new { Id = "PinCode", @class = "form-control" })
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="text-align:center">
                                            Latitude
                                        </td>
                                        <td>
                                            @Html.TextBoxFor(Model => Model.Latitude, null, new { Id = "Latitude", @class = "form-control" })
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="text-align:center">
                                            Longitude
                                        </td>
                                        <td>
                                            @Html.TextBoxFor(Model => Model.Longitude, null, new { Id = "Longitude", @class = "form-control" })
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="text-align:center"></td>

                                        <td style="text-align:right">

                                            <div style="float:left;">
                                                <input type="submit" value="Submit" class="btn-success form-control" />
                                            </div>
                                            <div style="float:left;padding-left:10px;">
                                                <a href="/Master/Citys" class="btn btn-warning">Cancel</a>
                                            </div>
                                        </td>

                                    </tr>
                                </table>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>


   

    <script type="text/javascript">
        $(document).ready(function () {

            $(".btn-success").click(function () {

                var Errors = "";
                if ($("#CityName").val() == "") {
                    Errors = Errors + "Please Enter CityName \n";
                }

                if ($("#ddlState :selected").val() == "0") {
                    Errors = Errors + "Please Select State \n";
                }

                if (Errors != "") {
                    alert(Errors);
                    return false
                }
                else
                    return true;

            });

        });

    </script>

}

