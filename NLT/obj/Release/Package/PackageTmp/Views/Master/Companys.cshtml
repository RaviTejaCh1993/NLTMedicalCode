
@{
    ViewBag.Title = "Companys";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model IEnumerable<NLT.Models.CompanyModel>


<style>
    .Grid-Headder-bg-color {
        background-color: #3b74fa;
        color: white;
        font-weight: bold;
    }
</style>

@using (Html.BeginForm("Companys", "Master", FormMethod.Post))
{


    <div class="container">
        <br />
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <b> Companys </b>
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-6">
                                <table class="table table-responsive">
                                    <caption style="text-align:right;font-weight:bold;"><a href="/Master/Company">Create</a></caption>
                                    <tr class="Grid-Headder-bg-color">
                                        <td style="text-align:center">
                                            Company Id
                                        </td>
                                        <td>
                                            Company Name
                                        </td>

                                        <td>
                                            Remarks
                                        </td>
                                        <td></td>
                                    </tr>

                                    @foreach (var m in Model)
                {
                                        <tr style="background-color:#f6fcfc">
                                            <td style="text-align:center">
                                                @m.CompanyId
                                            </td>
                                            <td>
                                                @m.CompanyName
                                            </td>
                                            <td>
                                                @m.Remarks
                                            </td>

                                            <td>
                                                <a href="/Master/Company/@m.CompanyId">Edit</a>
                                            </td>
                                        </tr>
                                    }

                                </table>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>


  


}

