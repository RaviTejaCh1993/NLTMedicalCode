

@model NLT.Models.DepartmentModel

@{
    ViewBag.Title = "Department";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Scripts/jquery-1.11.3.min.js"></script>
@using (Html.BeginForm("Department", "Master", FormMethod.Post))
{

    <div class="container">
        <br />
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <b> @ViewBag.PageHedding </b>
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-6">
                                <table class="table table-responsive">
                                    <tr id="lblStateIdRow" style="display:none">
                                        <td style="text-align:center">
                                            Department Id
                                        </td>
                                        <td>

                                            @Html.TextBoxFor(Model => Model.DepartmentId, "", new { @readonly = "readonly", @class = "form-control" })
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="text-align:center">
                                            Department Name
                                        </td>
                                        <td>
                                            @Html.TextBoxFor(Model => Model.DepartmentName, null, new { Id = "DepartmentName", @class = "form-control" })
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="text-align:center"></td>

                                        <td style="text-align:right">

                                            <div style="float:left;">
                                                <input type="submit" value="Submit" class="btn-success form-control" onclick="return valiadate()" />
                                            </div>
                                            <div style="float:left;padding-left:10px;">
                                                <a href="/Master/Departments" class="btn btn-warning">Cancel</a>
                                            </div>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>


    <script type="text/javascript">
        $(document).ready(function () {


            $(".btn-success").click(function () {

                var Errors = "";
                if ($("#DepartmentName").val() == "") {
                    Errors = Errors + "Please Enter Department Name \n";
                }

                if (Errors != "") {
                    alert(Errors);
                    return false
                }
                else
                    return true;

            });

        });

    </script>

}


