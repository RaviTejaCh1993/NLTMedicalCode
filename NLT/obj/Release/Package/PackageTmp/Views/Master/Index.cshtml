@model IEnumerable<NLT.Models.StateModel>

@{
    ViewBag.Title = "State";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("state", "Master", FormMethod.Post))
{

    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">States</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>

    <div class="row">
        <div class="col-lg-6">
        
            <table class="table table-responsive">
                <caption style="text-align:right;font-weight:bold;"><a href="/Master/State">Create</a></caption>
                <tr style="background-color:#ffe9c6">
                    <td style="text-align:center">
                        State Id
                    </td>
                    <td>
                        State Name
                    </td>
                    <td>
                        
                    </td>
                </tr>

               @foreach (var m in Model)
               {
                <tr style="background-color:#f6fcfc">
                    <td style="text-align:center">
                        @m.StateId
                    </td>
                    <td>
                       @m.StateName
                    </td>
                    <td>
                        <a href="/Master/State/@m.StateId">Edit</a>
                    </td>
                </tr>
               }

            </table>
        </div>
    </div>


}

