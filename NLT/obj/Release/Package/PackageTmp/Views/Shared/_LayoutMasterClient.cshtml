<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")


    <script src="~/Scripts/jquery-1.11.3.min.js"></script>

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color:blue;color:white;">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Medical Diagnostics", "Test", "User", new { area = "" }, new { @class = "navbar-brand", @style = "color:white;" })
            </div>
            <div class="navbar-collapse collapse" style="float:right;">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Login", "Index", "Login", null, new { @style = "color:white;font-weight:bold;" })</li>
                    <li>@Html.ActionLink("SignUp", "Index", "SignUp", null, new { @style = "color:white;font-weight:bold;" })</li>
                   @*<li><a href="#login-box" class="login-window" style="color:white;">Login / Sign In</a></li>*@
                    @*<li>@Html.ActionLink("Search Location", "Index", "User", null, new { @style = "color:white;" })</li>
                    <li>@Html.ActionLink("Order", "Index", "Order", null, new { @style = "color:white;" })</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home", null, new { @style = "color:white;" })</li>

                    <li>@Html.ActionLink("Create Location", "Index", "Location", null, new { @style = "color:white;" })</li>
                    <li>@Html.ActionLink("Create Vendor", "Index", "Vendor", null, new { @style = "color:white;" })</li>*@

                  
                </ul>
                @*@Html.Partial("_LoginPartial")*@
            </div>
        </div>
    </div>
   
    <div class="container body-content">
        @RenderBody()

        <footer>
            @*<p>&copy; @DateTime.Now.Year - </p>*@
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
